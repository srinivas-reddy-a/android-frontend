<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/backFeedback"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_baseline_close_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="8dp"
        android:text="@string/reason_for_cancel"
        android:textColor="@color/heading"
        android:textSize="@dimen/heading_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backFeedback" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10">

        <TextView
            android:id="@+id/reason_cancel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_default_dot"
            android:drawablePadding="5dp"
            android:drawableTint="@color/couponApplied"
            android:text="@string/reason1"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/reason_cancel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_default_dot"
            android:drawablePadding="5dp"
            android:drawableTint="@color/couponApplied"
            android:text="@string/reason1"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/reason_cancel3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_default_dot"
            android:drawablePadding="5dp"
            android:drawableTint="@color/couponApplied"
            android:text="@string/reason1"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/reason_cancel4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_default_dot"
            android:drawablePadding="5dp"
            android:drawableTint="@color/couponApplied"
            android:text="@string/reason1"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/reason_cancel5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_default_dot"
            android:drawablePadding="5dp"
            android:drawableTint="@color/couponApplied"
            android:text="@string/reason1"
            android:textColor="@color/text"
            android:textSize="20dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>