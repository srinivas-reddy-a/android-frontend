<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:background="#FDFAFA">


    <ImageView
        android:id="@+id/afterSearchProductImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/categories" />

    <TextView
        android:id="@+id/afterSearchProductName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:text="Produc name"
        android:textColor="@color/heading"
        android:textSize="@dimen/heading_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/afterSearchProductImage"
        app:layout_constraintTop_toTopOf="@+id/afterSearchProductImage" />

    <TextView
        android:id="@+id/afterSearchProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="Price of product"
        android:textSize="@dimen/text_size"
        android:textColor="@color/text"
        app:layout_constraintBottom_toBottomOf="@+id/afterSearchProductImage"
        app:layout_constraintStart_toEndOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/afterSearchProductName" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RS"
        android:textSize="@dimen/text_size"
        android:textColor="@color/text"
        app:layout_constraintStart_toStartOf="@+id/afterSearchProductName"
        app:layout_constraintTop_toTopOf="@+id/afterSearchProductPrice" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="/-"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/afterSearchProductPrice"
        app:layout_constraintTop_toTopOf="@+id/afterSearchProductPrice" />
</androidx.constraintlayout.widget.ConstraintLayout>