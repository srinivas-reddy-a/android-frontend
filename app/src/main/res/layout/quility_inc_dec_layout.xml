<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F8F6F6">

    <LinearLayout
        android:id="@+id/product_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@drawable/boarder_background"
        android:orientation="horizontal"
        android:padding="5dp"
        app:layout_constraintStart_toEndOf="@+id/mini_quantity_product_page"
        app:layout_constraintTop_toTopOf="@+id/mini_quantity_product_page">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QTY  :"
            android:textColor="@color/text"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/product_quantity_text_product_detail_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="1"
            android:textColor="@color/text"
            android:textSize="16dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/Add_quantity_product_page"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/product_quantity"
        app:layout_constraintTop_toTopOf="@+id/product_quantity"
        app:srcCompat="@drawable/ic_baseline_control_point"
        app:tint="@color/green" />

    <ImageView
        android:id="@+id/mini_quantity_product_page"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/productImageQualityLayout"
        app:layout_constraintTop_toBottomOf="@+id/textView33"
        app:srcCompat="@drawable/ic_baseline_mini"
        app:tint="@color/green" />

    <ImageView
        android:id="@+id/productImageQualityLayout"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/categories" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Add Quality of Products"
        android:textColor="@color/heading"
        android:textSize="@dimen/heading_size"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/productImageQualityLayout"
        app:layout_constraintTop_toTopOf="@+id/productImageQualityLayout" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:elevation="4dp"
        android:background="@color/smokeWhite"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/product_quantity"
        app:layout_constraintStart_toStartOf="@+id/product_quantity"
        app:layout_constraintTop_toBottomOf="@+id/product_quantity" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume"
            android:padding="2dp"
            android:layout_marginEnd="2dp"
            android:textColor="@color/text"
            android:textSize="16dp"/>

      <TextView
          android:id="@+id/selected_volume"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="2kg"
          android:textSize="@dimen/heading_size"
          android:textColor="@color/text"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>